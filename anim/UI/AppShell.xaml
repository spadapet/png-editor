<Grid
    x:Class="anim.AppShell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:anim"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <Grid.Resources>
        <Style x:Key="AppPaneInfoButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="50" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0,5" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="Transparent" />
        </Style>
        <DataTemplate x:Key="AppPaneInfoItemTemplate" x:DataType="local:AppPaneInfoViewModel">
            <Button Style="{StaticResource AppPaneInfoButtonStyle}">
                <Image Source="{x:Bind Icon}" />
            </Button>
        </DataTemplate>
        <Style x:Key="AppPaneInfoStyle" TargetType="ItemsControl">
            <Setter Property="ItemTemplate" Value="{StaticResource AppPaneInfoItemTemplate}" />
        </Style>
    </Grid.Resources>
    <Grid Background="{ThemeResource AppBarBackgroundThemeBrush}">
        <ItemsControl x:Name="AppPaneInfoList" ItemsSource="{x:Bind State.Panes}" Style="{StaticResource AppPaneInfoStyle}" />
    </Grid>
</Grid>
