<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:anim">

    <x:Double x:Key="UiFontSize">12</x:Double>
    <SolidColorBrush x:Key="PaneBackgroundBrush">#fff5f5f5</SolidColorBrush>
    <SolidColorBrush x:Key="PaneListBackgroundBrush">#ffdfdee6</SolidColorBrush>
    <SolidColorBrush x:Key="PaneBorderBrush">#ffb7bacb</SolidColorBrush>

    <Style x:Key="PaneHeaderStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="TextAlignment" Value="Left" />
        <Setter Property="TextWrapping" Value="NoWrap" />
        <Setter Property="Margin" Value="10" />
    </Style>

</ResourceDictionary>
